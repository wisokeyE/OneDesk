<Page
    x:Class="OneDesk.Views.Pages.TaskManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="clr-namespace:OneDesk.Models"
    xmlns:local="clr-namespace:OneDesk.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TaskManagerPage"
    d:DataContext="{d:DesignInstance local:TaskManagerPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 用户任务卡片列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding ViewModel.UserInfoManager.UserInfos}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:UserInfo}">
                        <ui:Card Margin="0,0,0,16" Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- 左侧：头像和用户名 -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <ui:Image
                                        Width="60"
                                        Height="60"
                                        CornerRadius="30"
                                        Source="{Binding PhotoBitmap}"
                                        Margin="0,0,16,0" />
                                    <StackPanel VerticalAlignment="Center">
                                        <ui:TextBlock
                                            Text="{Binding DisplayName}"
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Margin="0,0,0,4" />
                                        <ui:TextBlock
                                            Text="{Binding Mail}"
                                            FontSize="13"
                                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                </StackPanel>

                                <!-- 右侧：任务统计 -->
                                <StackPanel
                                    Grid.Column="2"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">

                                    <!-- 待处理任务 -->
                                    <Border
                                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16,8"
                                        Margin="0,0,12,0">
                                        <StackPanel>
                                            <ui:TextBlock
                                                Text="待处理"
                                                FontSize="12"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,4" />
                                            <ui:TextBlock
                                                Text="{Binding TaskQueue.PendingTasks.Count, FallbackValue=0}"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>

                                    <!-- 正在运行 -->
                                    <Border
                                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16,8"
                                        Margin="0,0,12,0">
                                        <StackPanel>
                                            <ui:TextBlock
                                                Text="正在运行"
                                                FontSize="12"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,4" />
                                            <ui:TextBlock
                                                Text="{Binding TaskQueue.RunningTaskCount, FallbackValue=0}"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>

                                    <!-- 已完成 -->
                                    <Border
                                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16,8"
                                        Margin="0,0,12,0">
                                        <StackPanel>
                                            <ui:TextBlock
                                                Text="已完成"
                                                FontSize="12"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,4" />
                                            <ui:TextBlock
                                                Text="{Binding TaskQueue.CompletedTasks.Count, FallbackValue=0}"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>

                                    <!-- 已取消 -->
                                    <Border
                                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16,8"
                                        Margin="0,0,12,0">
                                        <StackPanel>
                                            <ui:TextBlock
                                                Text="已取消"
                                                FontSize="12"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,4" />
                                            <ui:TextBlock
                                                Text="{Binding TaskQueue.CancelledTasks.Count, FallbackValue=0}"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>

                                    <!-- 失败 -->
                                    <Border
                                        Background="{ui:ThemeResource ControlFillColorDefaultBrush}"
                                        CornerRadius="8"
                                        Padding="16,8">
                                        <StackPanel>
                                            <ui:TextBlock
                                                Text="失败"
                                                FontSize="12"
                                                Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,4" />
                                            <ui:TextBlock
                                                Text="{Binding TaskQueue.FailedTasks.Count, FallbackValue=0}"
                                                FontSize="20"
                                                FontWeight="Bold"
                                                HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
