<Page
    x:Class="OneDesk.Views.Pages.FileManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="clr-namespace:OneDesk.Models"
    xmlns:local="clr-namespace:OneDesk.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:graph="clr-namespace:Microsoft.Graph.Models;assembly=Microsoft.Graph"
    xmlns:helpers="clr-namespace:OneDesk.Helpers"
    Title="FileManagerPage"
    d:DataContext="{d:DesignInstance local:FileManagerPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:FileSizeConverter x:Key="FileSizeConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 导航栏 -->
        <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,12,0">
                    <ui:Button Command="{Binding ViewModel.UpCommand}" Margin="0,0,8,0"
                               Appearance="Secondary" Padding="8" ToolTip="返回上一级">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.CurrentFolder.ParentFolder}" Value="{x:Null}">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                        <ui:SymbolIcon Symbol="ArrowUp24" FontSize="16" />
                    </ui:Button>
                    <ui:Button Command="{Binding ViewModel.RefreshCommand}"
                               Appearance="Secondary" Padding="8" ToolTip="刷新">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                        <ui:SymbolIcon Symbol="ArrowClockwise24" FontSize="16" />
                    </ui:Button>
                    <ui:Button x:Name="RootSwitchButton"
                               Command="{Binding ViewModel.ToggleRootSwitchCommand}"
                               Appearance="Secondary" Padding="8" ToolTip="切换根目录" Margin="8,0,0,0">
                        <ui:Button.Style>
                            <Style TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
                                <Setter Property="IsEnabled" Value="True" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ViewModel.IsLoading}" Value="True">
                                        <Setter Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:Button.Style>
                        <ui:SymbolIcon Symbol="FolderSwap24" FontSize="16" />
                    </ui:Button>
                </StackPanel>

                <Popup Grid.Column="0" Placement="Bottom"
                       PlacementTarget="{Binding ElementName=RootSwitchButton}"
                       IsOpen="{Binding ViewModel.RootSwitchPopupIsOpen, Mode=TwoWay}"
                       StaysOpen="False" AllowsTransparency="True">
                    <Border Background="White" CornerRadius="4"
                            BorderBrush="#E0E0E0" BorderThickness="1" Padding="8">
                        <Border.Effect>
                            <DropShadowEffect RenderingBias="Quality" BlurRadius="10"
                                ShadowDepth="2" Color="#77000000" Opacity="0.6"/>
                        </Border.Effect>
                        <ui:ListView SelectedIndex="{Binding ViewModel.RootIndex, Mode=OneWay}"
                                     ItemsSource="{Binding ViewModel.UserInfoManager.ActivatedUserInfo.SharedWithMeItems, Mode=OneWay, FallbackValue={x:Null}}"
                                     SelectionMode="Single" DisplayMemberPath="Name" SelectionChanged="OnRootIndexChanged" />
                    </Border>
                </Popup>

                <ui:BreadcrumbBar Grid.Column="1" Command="{Binding ViewModel.JumpCommand}" ItemsSource="{Binding ViewModel.BreadcrumbItems, Mode=OneWay}">
                    <ui:BreadcrumbBar.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Item}">
                            <ui:TextBlock Text="{Binding Name, Mode=OneTime}" />
                        </DataTemplate>
                    </ui:BreadcrumbBar.ItemTemplate>
                </ui:BreadcrumbBar>
            </Grid>
        </Border>

        <!-- 文件列表 -->
        <Border Grid.Row="1" Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
            <StackPanel>
                <ui:ListView x:Name="FileListView" ItemsSource="{Binding ViewModel.Items}"
                             SelectionMode="Extended" MouseDoubleClick="FileListView_MouseDoubleClick"
                             SelectionChanged="FileListView_SelectionChanged"
                             Margin="0" BorderThickness="0" MaxHeight="410">
                    <ui:ListView.ItemContainerStyle>
                        <Style TargetType="ui:ListViewItem" BasedOn="{StaticResource {x:Type ui:ListViewItem}}">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}"
                                                 ItemsSource="{Binding ContextMenuCommands}">
                                        <ContextMenu.ItemContainerStyle>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Header" Value="{Binding Name}" />
                                                <Setter Property="Command" Value="{Binding DataContext.ExecuteFileCommandCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                                <Setter Property="CommandParameter" Value="{Binding}" />
                                            </Style>
                                        </ContextMenu.ItemContainerStyle>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Tag" Value="{Binding DataContext.ViewModel, RelativeSource={RelativeSource AncestorType=ui:ListView}}" />
                        </Style>
                    </ui:ListView.ItemContainerStyle>
                    <ui:ListView.View>
                        <ui:GridView>
                            <ui:GridViewColumn Header="名称" Width="400">
                                <ui:GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type graph:DriveItem}">
                                        <StackPanel Orientation="Horizontal" Margin="4,6">
                                            <ui:SymbolIcon Margin="0,0,12,0" FontSize="20">
                                                <ui:SymbolIcon.Style>
                                                    <Style TargetType="ui:SymbolIcon">
                                                        <Setter Property="Symbol" Value="Folder24" />
                                                        <Setter Property="Foreground" Value="#FDB900" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Folder}" Value="{x:Null}">
                                                                <Setter Property="Symbol" Value="Document24" />
                                                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ui:SymbolIcon.Style>
                                            </ui:SymbolIcon>
                                            <ui:TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="14" />
                                        </StackPanel>
                                    </DataTemplate>
                                </ui:GridViewColumn.CellTemplate>
                            </ui:GridViewColumn>
                            <ui:GridViewColumn Header="修改日期" Width="180">
                                <ui:GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type graph:DriveItem}">
                                        <ui:TextBlock Text="{Binding LastModifiedDateTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}', Mode=OneWay}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="4,6" />
                                    </DataTemplate>
                                </ui:GridViewColumn.CellTemplate>
                            </ui:GridViewColumn>
                            <ui:GridViewColumn Header="类型" Width="200">
                                <ui:GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type graph:DriveItem}">
                                        <ui:TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="4,6">
                                            <ui:TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                                    <Setter Property="Text" Value="{Binding File.MimeType, Mode=OneWay}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Folder}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="{Binding File.MimeType, Mode=OneWay}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Folder}" Value="{x:Null}" >
                                                            <Setter Property="Text" Value="文件" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Folder, Converter={x:Null}}" Value="False">
                                                            <Setter Property="Text" Value="文件夹" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ui:TextBlock.Style>
                                        </ui:TextBlock>
                                    </DataTemplate>
                                </ui:GridViewColumn.CellTemplate>
                            </ui:GridViewColumn>
                            <ui:GridViewColumn Header="大小" Width="120">
                                <ui:GridViewColumn.CellTemplate>
                                    <DataTemplate DataType="{x:Type graph:DriveItem}">
                                        <ui:TextBlock Text="{Binding Size, Converter={StaticResource FileSizeConverter}, Mode=OneWay}"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="4,6" />
                                    </DataTemplate>
                                </ui:GridViewColumn.CellTemplate>
                            </ui:GridViewColumn>
                        </ui:GridView>
                    </ui:ListView.View>
                </ui:ListView>

                <!-- 加载指示器 -->
                <Border Background="{DynamicResource ApplicationBackgroundBrush}" Opacity="0.9"
                        Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:ProgressRing IsIndeterminate="True" Width="48" Height="48" />
                </Border>
            </StackPanel>
        </Border>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Padding="16,8">
            <ui:TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="12">
                <Run Text="共 " />
                <Run Text="{Binding Items.Count, ElementName=FileListView, Mode=OneWay}" FontWeight="SemiBold" />
                <Run Text=" 项" />
                <Run Text="  |  已选中 " />
                <Run Text="{Binding SelectedItems.Count, ElementName=FileListView, Mode=OneWay}" FontWeight="SemiBold" />
                <Run Text=" 项" />
            </ui:TextBlock>
        </Border>
    </Grid>
</Page>
