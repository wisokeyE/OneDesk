<Page
    x:Class="OneDesk.Views.Pages.FileManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="clr-namespace:OneDesk.Models"
    xmlns:local="clr-namespace:OneDesk.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:graph="clr-namespace:Microsoft.Graph.Models;assembly=Microsoft.Graph"
    Title="FileManagerPage"
    d:DataContext="{d:DesignInstance local:FileManagerPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 导航栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ui:Button Command="{Binding ViewModel.UpCommand}" Margin="0,0,10,0" >
                <ui:Button.Style>
                    <Style TargetType="ui:Button">
                        <Setter Property="IsEnabled" Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ViewModel.BreadcrumbItems[^1].ParentFolder}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:Button.Style>
                <ui:SymbolIcon Symbol="ArrowUp48" />
            </ui:Button>
            <ui:BreadcrumbBar Command="{Binding ViewModel.JumpCommand}" ItemsSource="{Binding ViewModel.BreadcrumbItems, Mode=OneWay}">
                <ui:BreadcrumbBar.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Item}">
                        <TextBlock Text="{Binding Name, Mode=OneTime}" />
                    </DataTemplate>
                </ui:BreadcrumbBar.ItemTemplate>
            </ui:BreadcrumbBar>
        </StackPanel>

        <!-- 文件列表 -->
        <ui:ListView x:Name="FileListView" Grid.Row="1" ItemsSource="{Binding ViewModel.Items}" 
                     SelectionMode="Extended" MouseDoubleClick="FileListView_MouseDoubleClick">
            <ui:ListView.View>
                <GridView>
                    <GridViewColumn Header="名称" Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type graph:DriveItem}">
                                <StackPanel Orientation="Horizontal">
                                    <ui:SymbolIcon Margin="0,0,8,0">
                                        <ui:SymbolIcon.Style>
                                            <Style TargetType="ui:SymbolIcon">
                                                <Setter Property="Symbol" Value="Folder48" />
                                                <Style.Triggers>
                                                    <!-- DriveItem.Folder null 视为文件 -->
                                                    <DataTrigger Binding="{Binding Folder}" Value="{x:Null}">
                                                        <Setter Property="Symbol" Value="Document48" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:SymbolIcon.Style>
                                    </ui:SymbolIcon>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="类型" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type graph:DriveItem}">
                                <TextBlock Text="{Binding File.MimeType, FallbackValue='文件', Mode=OneWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="大小" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type graph:DriveItem}">
                                <TextBlock Text="{Binding Size, Mode=OneWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="修改日期" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type graph:DriveItem}">
                                <TextBlock Text="{Binding LastModifiedDateTime, Mode=OneWay}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ui:ListView.View>
        </ui:ListView>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="{DynamicResource ControlFillColorDefaultBrush}" Padding="10,5">
            <TextBlock HorizontalAlignment="Center">
                <Run Text="共 " />
                <Run Text="{Binding Items.Count, ElementName=FileListView, Mode=OneWay}" />
                <Run Text=" 项，已选中 " />
                <Run Text="{Binding SelectedItems.Count, ElementName=FileListView, Mode=OneWay}" />
                <Run Text=" 项" />
            </TextBlock>
        </Border>
    </Grid>
</Page>
